  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'encrypted-dns-fork'",
      "cargo": {
        "args": [
          "build",
          "--bin=encrypted-dns-fork",
          "--package=encrypted-dns-fork"
        ],
        "filter": {
          "name": "encrypted-dns-fork",
          "kind": "bin"
        }
      },
      "env": {
        "RUST_LOG": "debug"
      },
      "args": [
        "--config=encrypted-dns.toml"
      ],
      "cwd": "${workspaceFolder}/.private"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'encrypted-dns-fork'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=encrypted-dns-fork",
          "--package=encrypted-dns-fork"
        ],
        "filter": {
          "name": "encrypted-dns-fork",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
